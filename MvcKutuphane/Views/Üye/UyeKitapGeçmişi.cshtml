@using MvcKutuphane.Models.Entity;
@model List<TBLHAREKET>
@{
    ViewBag.Title = "UyeKitapGeçmişi";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye: @ViewBag.u1</h2>
<br />
<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.TBLKITAP.AD</td>
        <td>@x.TBLPERSONEL.PERSONEL</td>
        <td>@Convert.ToDateTime(x.ALIŞTARIH).ToString("dd/MM/yyyy")</td>
        <td>@Convert.ToDateTime(x.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
    </tr>
    }
</table>