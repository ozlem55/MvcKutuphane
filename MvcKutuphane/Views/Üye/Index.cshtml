@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model  PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Üyeler</h2>

<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ÜYE KİTAP GEÇMİŞİ</th>
    </tr>

    @foreach (var uye in Model)
    {
        <tr>
            <td>@uye.ID</td>
            <td>@uye.AD</td>
            <td>@uye.SOYAD</td>
            <td>@uye.OKUL</td>
            <td><a href="/Üye/UyeSil/@uye.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Üye/UyeGetir/@uye.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Üye/UyeKitapGeçmişi/@uye.ID" class="btn btn-success"style="background-color:lightseagreen">Kitap Geçmişi</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}))
<a href="/Üye/UyeEkle" class="btn btn-primary">Yeni Üye Ekle</a>



